        function toggleMenu() {
            const menu = document.getElementById('mobile-menu');
            const menuIcon = document.getElementById('menu-icon');
            const closeIcon = document.getElementById('close-icon');
            if (menu.classList.contains('hidden')) {
                menu.classList.remove('hidden');
                menuIcon.classList.add('hidden');
                closeIcon.classList.remove('hidden');
            } else {
                menu.classList.add('hidden');
                menuIcon.classList.remove('hidden');
                closeIcon.classList.remove('hidden');
            } // Modificado: Asegurar que closeIcon se oculta si se abre
        }

        function toggleLegalModal(show) {
            const modal = document.getElementById('legal-modal');
            if (show) {
                modal.classList.remove('hidden');
            } else {
                modal.classList.add('hidden');
            }
        }

        function handleFormSubmit(event) {
            event.preventDefault();
            
            const form = event.target;
            const name = form.name.value;
            const phone = form.phone.value;
            const interest = form.interest.value;
            const message = form.message.value;
            const acceptedLegal = form.acceptedLegal.checked;
            const statusDiv = document.getElementById('submission-status');
            
            statusDiv.innerHTML = '';
            statusDiv.classList.add('hidden');

            if (!acceptedLegal) {
                statusDiv.innerHTML = '<div class="p-3 bg-red-100 text-red-800 rounded-md font-medium flex items-center gap-2"><svg class="icon" fill="none" viewBox="0 0 24 24" stroke="currentColor"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M6 18L18 6M6 6l12 12"></path></svg>Debes aceptar la política de privacidad.</div>';
                statusDiv.classList.remove('hidden');
                return;
            }

            // SIMULACIÓN DE ENVÍO
            // Aquí iría el código real de envío de datos
            console.log("Formulario enviado:", { name, phone, interest, message });

            statusDiv.innerHTML = `<div class="p-3 bg-green-100 text-green-800 rounded-md font-medium flex items-center gap-2"><svg class="icon" fill="none" viewBox="0 0 24 24" stroke="currentColor"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7"></path></svg>¡Estudio solicitado! Te llamaré al ${phone} muy pronto.</div>`;
            statusDiv.classList.remove('hidden');

            // Opcional: Resetear el formulario después de 6 segundos
            setTimeout(() => {
                form.reset();
                statusDiv.classList.add('hidden');
                document.getElementById('submission-status').innerHTML = '';
            }, 6000);
        }
    </script>

